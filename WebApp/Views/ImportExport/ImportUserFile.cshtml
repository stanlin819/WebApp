@model IEnumerable<WebApp.Models.UserModel.User>
@{
    ViewBag.Title = "Import User Data";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">@ViewBag.Title</h1>
            <form asp-controller="Import" asp-action="Save" method="post">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <button type="submit" class="btn btn-success" formaction="@Url.Action("Save_User", "ImportExport")">Save</button>
                        <a asp-controller="ImportExport" asp-action="Discard_User" class="btn btn-danger">Discard</a>
                    </div>
                        @* <button type="submit" class="btn btn-warning" formaction="@Url.Action("ExportUserPDF", "ImportExport")">Export PDF</button> *@
                </div>            
                <div class="list-group mb-3">
                    <ul class="list-group">
                        @if (Model == null || !Model.Any())
                        {
                            <li class="list-group-item text-center">No users found.</li>
                        }
                        else
                        {
                            @for (var i = 0; i < Model.Count(); i++)
                            {
                                <li class="list-group-item justify-content-between align-items-center">
                                    <input type="hidden" name="[@i].Username" value="@Model.ElementAt(i).Username" />
                                    <input type="hidden" name="[@i].Email" value="@Model.ElementAt(i).Email" />
                                    @Model.ElementAt(i).Username (@Model.ElementAt(i).Email)
                                </li>
                            }
                        }
                    </ul>
                </div>
            </form>
        </div>
    </div>
</div>