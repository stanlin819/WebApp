@{
    ViewBag.Title = "Import User Files";
    var message = TempData["Warning"];
}

@if (message != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-controller="ImportExport" asp-action="ImportTransactionFile" method="post" enctype="multipart/form-data">
    <div class="form-group mt-3 mb-3">
        <label><strong>Select Excel File</strong></label>
        <input type="file" name="file" class="form-control"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Import</button>
        <button type="submit" class="btn btn-warning" formaction="@Url.Action("ConvertExcelToPdf", "ImportExport")">Convert To PDF</button>
    </div>
</form>