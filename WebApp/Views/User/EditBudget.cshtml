@model IEnumerable<WebApp.Models.BudgetModel.Budget>;

@{
    var userId = ViewBag.userId;
    var currentPage = ViewBag.currentPage;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>@ViewBag.Title</h1>

            <div class="row">
                <div class="col-md-6">
                    <form asp-controller="User" asp-action="EditBudget" asp-route-id="@userId" asp-route-currentPage="@currentPage" method="post">
                        @foreach( var budget in Model){
                            <div class="form-group mb-3">
                                <label class="control-label">@budget.Category</label>
                                <input name="limits[@budget.Category]" value="@budget.Limit" class="form-control" type="number" step="0.01" />
                            </div>
                        }
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="User" asp-action="Details" asp-route-id="@userId" asp-route-currentPage="@currentPage" class="btn btn-secondary">Cancle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>