@model WebApp.Models.UserModel.User
@{
    var budgets = ViewBag.Budgets as IEnumerable<WebApp.Models.BudgetModel.Budget>;
    var currentPage = Convert.ToInt32(ViewData["CurrentPage"] ?? 1);
    var categoryDistribution = ViewBag.CategoryDistribution as Dictionary<string,decimal>;
}
<div class="card mb-4">
    <div class="card-body">
        <h3 class="card-title">User Information</h3>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Username:</strong> @Model.Username</p>
            </div>
            <div class="col-md-6">
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
            <div class="col-md-6">
                <div class="mb-3 d-flex align-items-center">
                    <h5 class="card-title mb-0"><strong>Budget</strong></h5>
                    <a asp-controller="User" asp-action="EditBudget" asp-route-id="@Model.Id" asp-route-currentPage="currentPage" method="get">
                    <i class="bi bi-pencil ms-2"></i></a>
                </div>
                @foreach (var budget in budgets){
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @budget.Category: @budget.Limit
                    </li>
                }
            </div>
            <div class="col-md-6">
                <h5 class="card-title"><strong>Now</strong></h5>
                @foreach (var budget in budgets){
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @budget.Category: @(categoryDistribution?.TryGetValue(budget.Category ?? "", out var value) == true ? value : 0)
                    </li>
                }
            </div>
        </div>
    </div>
</div>