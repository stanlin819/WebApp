@model IEnumerable<WebApp.Models.TransactionModel.TransactionViewModel>
@{
    var showExportButton = ViewData["ShowExportButton"] as bool? ?? false;
    var currentPage = ViewBag.currentPage;
    var userId = ViewBag.UserId;
}
@if (Model == null || !Model.Any())
{
    <div>
        <a href="@Url.Action("Create", "Transaction", new {uid = @userId, page = @currentPage})" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add
        </a>
    </div>
    <div class="alert alert-info">No transactions found for this user.</div>
}
else
{
    <div class="col-md-12">
        <form asp-controller="ImportExport" asp-action="Save_Transaction" method="post">       
            @if (showExportButton)
            {   
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <a href="@Url.Action("Create", "Transaction", new {uid = @userId, page = @currentPage})" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add
                        </a>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Export
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <button type="submit" class="dropdown-item" formaction="@Url.Action("ExportTransactionToExcel", "ImportExport")">Excel</button>
                            </li>
                            <li>
                                <button type="submit" class="dropdown-item" formaction="@Url.Action("ExportTransactionPDF", "ImportExport")">PDF</button>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr class="text-center">
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Category</th>
                            @if (!showExportButton){
                                <th>User</th>
                            }else{
                                <th>Delete</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count(); i++)
                        {
                            <tr class="text-center">
                                <td class="align-middle">
                                    @Model.ElementAt(i).Title
                                    <input type="hidden" name="transactions[@i].Title" value="@Model.ElementAt(i).Title" />
                                </td>
                                <td class="align-middle @(!Model.ElementAt(i).IsIncome ? "text-success" : "text-danger")">
                                    @Model.ElementAt(i).Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                                    <input type="hidden" name="transactions[@i].Amount" value="@Model.ElementAt(i).Amount" />
                                </td>
                                <td class="align-middle">
                                    @Model.ElementAt(i).Date.ToShortDateString()
                                    <input type="hidden" name="transactions[@i].Date" value="@Model.ElementAt(i).Date.ToString("yyyy-MM-dd")" />
                                </td>
                                <td class="align-middle">
                                    @Model.ElementAt(i).Category
                                    <input type="hidden" name="transactions[@i].Category" value="@Model.ElementAt(i).Category" />
                                </td>
                                <td class="align-middle">
                                    @if (!showExportButton){
                                        <a asp-controller="User" asp-action="Details" asp-route-userName="@Model.ElementAt(i).UserName" asp-route-comeFrom="Transaction">@Model.ElementAt(i).UserName</a>
                                    }else{
                                        <a asp-controller="Transaction" asp-action="Delete" asp-route-Id=@Model.ElementAt(i).Id asp-route-userId=@userId asp-route-page=@currentPage method="post" style="display: inline; color: red;" onclick="return confirm('Are you sure you want to delete this transaction?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                    <input type="hidden" name="transactions[@i].UserName" value="@Model.ElementAt(i).UserName" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
}


