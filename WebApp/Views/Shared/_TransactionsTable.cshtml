@using Microsoft.VisualBasic
@model IEnumerable<WebApp.Models.TransactionModel.TransactionViewModel>
@{
    var showExportButton = ViewData["ShowExportButton"] as bool? ?? false;
    var currentPage = ViewBag.currentPage;
    var userId = ViewBag.UserId;
}
<div id="transactionTableContainer">
    @if (Model == null || !Model.Any())
    {
        <div>
            <!-- 改為按鈕並設定要載入的 URL -->
            <button type="button" class="btn btn-primary open-create-modal"
                    data-url="@Url.Action("CreatePartial", "Transaction", new { uid = @userId, page = @currentPage })">
                <i class="bi bi-plus-circle"></i> Add
            </button>
        </div>
        <div class="alert alert-info">No transactions found for this user.</div>
    }
    else
    {
        <div class="col-md-12">    
            @if (showExportButton)
            {   
                <partial name="_ExportButton" model='new { uid = @userId, page = @currentPage }' />
            }
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr class="text-center">
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Category</th>
                            @if (!showExportButton){
                                <th>User</th>
                            }else{
                                <th>Delete</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr class="text-center">
                                <td class="align-middle">
                                    @t.Title
                                </td>
                                <td class="align-middle @(!t.IsIncome ? "text-success" : "text-danger")">
                                    @t.Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                                </td>
                                <td class="align-middle">
                                    @t.Date.ToShortDateString()
                                </td>
                                <td class="align-middle">
                                    @t.Category.ToString()
                                </td>
                                <td class="align-middle">
                                    @if (!showExportButton){
                                        <a asp-controller="User" asp-action="Details" asp-route-userName="@t.UserName" asp-route-comeFrom="Transaction">@t.UserName</a>
                                    }else{
                                        <a href="#" class="delete-transaction-btn" data-id="@t.Id" data-user-id="@userId" data-page="@currentPage" style="display: inline; color: red;">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

