@model WebApp.Models.UserModel.UserViewModel

@{
    var currentPage = Convert.ToInt32(ViewData["CurrentPage"] ?? 1);
}

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr class="text-center"></tr>
                <th>Name</th>
                <th>Transaction Count</th>
                <th>Total Income</th>
                <th>Total Expense</th>
                <th>Last Transaction Date</th>
            </tr>
        </thead>
        <tbody>
            <tr class="text-center">
                <td class="align-middle">
                    @Model.UserName
                </td>
                <td class="align-middle">
                    @Model.TransactionCount
                </td>
                <td class="align-middle">
                    @Model.TotalIncome
                </td>
                <td class="align-middle">
                    @Model.TotalExpense
                </td>
                <td class="align-middle">
                    @Model.LastTransactionDate
                </td>
                <td>
                    <div>
                        <a href="@Url.Action("Details", "User", new { id = Model.UserId , currentPage = currentPage})" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> 
                        </a>
                        <form asp-action="Delete" asp-controller="User" asp-route-currentPage = "@currentPage" asp-route-id="@Model.UserId" 
                                method="post" class="d-inline" 
                                onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

