<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>@ViewBag.Title</h1>

            <div class="row">
                <div class="col-md-6">
                    <form asp-controller="User" asp-action="EditBudget" method="post">
                        <div class="form-group mb-3">
                            <label class="control-label">Food</label>
                            <input name="limits[Food]" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Transport</label>
                            <input name="limits[Transport]" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Entertainment</label>
                            <input name="limits[Entertainment]" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Shopping</label>
                            <input name="limits[Shopping]" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Other</label>
                            <input name="limits[Other]" class="form-control" type="number" step="0.01" />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>